<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_margin="4dp"
    app:cardCornerRadius="4dp"
    android:elevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:clickable="true"
            android:background="?android:selectableItemBackground"
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/nama_mobil"
                android:textSize="20sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="BMW X4 Sports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:background="@drawable/bg_layer"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:id="@+id/jumlahUnit"
                android:text="600 Unit"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tahun"
                android:text="2019"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:text="-"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/nama_kategori"
                android:text="BMW"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:scaleType="centerInside"
            android:id="@+id/imgMobil"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/mobil"
            android:layout_width="match_parent"
            android:layout_height="250dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/harga_mobil"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:text="Rp. 243,000,000"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@id/btn_beli"
                android:layout_marginRight="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:background="@drawable/bg_button"
                android:layout_centerInParent="true"
                android:id="@+id/btn_beli"
                android:textStyle="bold"
                android:textColor="#fff"
                android:text="Beli"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="35dp" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>