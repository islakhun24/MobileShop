<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmen.ProfileFrag">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <ImageView
                android:tint="@color/colorPrimary"
                android:src="@drawable/logo"
                android:layout_width="60dp"
                android:layout_marginTop="12sp"
                android:layout_marginBottom="12sp"
                android:layout_marginLeft="8dp"
                android:scaleType="fitXY"
                android:layout_height="match_parent" />
            <TextView
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="Rumah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="20sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="Mobil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:layout_marginTop="32dp"
            android:layout_gravity="center"
            android:src="@drawable/login"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <TextView
            android:id="@+id/username"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Islakhun Nur Dzaki"
            android:layout_marginTop="16sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/etEmail"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Islakhunnurdzaki22@gmail.com"
            android:layout_marginTop="4dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:background="#f1f1f1"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <Button
            android:id="@+id/logout"
            android:textColor="#fff"
            android:text="LOG Out"
            android:background="@drawable/bg_button"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <View
            android:background="#f1f1f1"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="#000"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="Tentang Rumah Mobil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="4dp"
                android:weightSum="6"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#000"
                    android:text="Nama Pemilik"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="#000"
                    android:text=":"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/warna"
                    android:textColor="#000"
                    android:text="Priyatno"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="4dp"
                android:weightSum="6"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#000"
                    android:text="No. Hp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="#000"
                    android:text=":"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/kapasitas"
                    android:textColor="#000"
                    android:text="08121559535"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="4dp"
                android:weightSum="6"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#000"
                    android:text="Alamat"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="#000"
                    android:text=":"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/bahanbakar"
                    android:textColor="#000"
                    android:text="Jalan margantara gang Al-jami rt 08 rw 04 tanjung Purwokerto Selatan"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>