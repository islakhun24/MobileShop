<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="bowo.skripsi.mobileshop.fragmen.HomeFrag">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <ImageView
            android:tint="@color/colorPrimary"
            android:src="@drawable/logo"
            android:layout_width="60dp"
            android:layout_marginTop="12sp"
            android:layout_marginBottom="12sp"
            android:layout_marginLeft="8dp"
            android:scaleType="fitXY"
            android:layout_height="match_parent" />
        <TextView
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="Rumah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="20sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="Mobil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <RelativeLayout
        android:gravity="end"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/etSearch"
            android:hint="Cari Mobil Di Sini ...."
            android:focusable="auto"
            android:focusableInTouchMode="true"
            android:drawablePadding="8dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_alignParentRight="true"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:drawableLeft="@drawable/ic_search_black_24dp"
            android:background="@drawable/editsearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_marginRight="8dp"
        android:id="@+id/rvKategori"
        android:orientation="horizontal"
        android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/kosong"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:gravity="center"
        tools:context=".MainActivity">

        <ImageView
            android:layout_width="100dp"
            android:tint="@color/colorPrimary"
            android:layout_height="50dp"
            android:id="@+id/logo"
            android:scaleType="fitXY"
            android:src="@drawable/logo"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_below="@id/logo"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20dp"
                android:text="Rumah"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="20dp"
                android:layout_marginLeft="3dp"
                android:text="Mobil"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_marginTop="8dp"
            android:layout_marginRight="24sp"
            android:layout_marginLeft="24sp"
            android:textAlignment="center"
            android:text="Data mobil masih kosong, Pemilik belum menambahkan mobil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/rvMobil"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
</LinearLayout>
